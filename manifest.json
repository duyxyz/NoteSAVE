{
  "manifest_version": 3,
  "name": "NoteSAVE",
  "version": "2.3",
  "description": "Highlight text and save notes.",
  "default_locale": "en",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
